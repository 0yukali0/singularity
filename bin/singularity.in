prefix="@prefix@"
exec_prefix="@exec_prefix@"
libexecdir="@libexecdir@"
version="@VERSION"

RETVAL=0
MESSAGELEVEL=1
DEBUG=""

export prefix exec_prefix libexecdir RETVAL MESSAGELEVEL DEBUG

if [ -f "$libexecdir/singularity/functions" ]; then
    . "$libexecdir/singularity/functions"
else
    echo "Error loading functions: $libexecdir/singularity/functions"
    exit 1
fi

usage() {
    echo "USAGE: $0 (options) [command] (command options)"
    echo
    echo "OPTIONS:"
    echo "    -h --help     Display this usage summary"
    echo "       --version  Show application version"
    echo "    -v --verbose  Increase verbosity +1"
    echo "    -d --debug    Show debugging information"
    echo
    echo "COMMANDS:"

    for i in $libexecdir/singularity/*; do
        if [ -d "$i" -a -x "$i/exec" ]; then
            NAME=`basename "$i"`
            echo "    $NAME"
            if [ -f "$i/usage" ]; then
                cat "$i/usage" | while read i; do
                    echo "        $i"
                done
            fi
        fi
    done
    echo
    echo "For any additional help or support visit the Singularity"
    echo "website: http://gmkurtzer.github.io/singularity"
    echo
}

# Initial argument processing. Iterate through arguments until argument
# is not recognized as an argument, which must mean it is a command. So
# exit the arg processing and continue to command section.
while true; do
    case $1 in
        -h|--help)
            usage
            exit
        ;;
        --version)
            message 1 "$version"
            exit
        ;;
        -d|--debug)
            MESSAGELEVEL=5
            DEBUG=1
            message 5 "enabling debugging"
            #set -x
            shift
        ;;
        -v|--verbose)
            MESSAGELEVEL=`expr $MESSAGELEVEL + 1`
            message 2 "increasing verbosity level"
            shift
        ;;
        -*)
            message 0 "Unknown argument: $1"
            exit 1
        ;;
        *)
            message 4 "ending argument loop"
            break
        ;;
    esac
done


if [ -n "$SINGULARITY_COMMAND" ]; then
    COMMAND="$SINGULARITY_COMMAND"
else
    COMMAND="$1"
    shift
fi
export COMMAND

if [ -z "$COMMAND" -o "$COMMAND" == "help" ]; then
    usage
    exit 0
fi

if [ -x "$libexecdir/singularity/$COMMAND/exec" ]; then
    exec $libexecdir/singularity/$COMMAND/exec "$@"
else
    message 0 "Unknown command '$COMMAND'"
    exit 1
fi

# We should never get here...
exit 255
