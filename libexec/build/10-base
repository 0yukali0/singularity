if [ -z "$libexecdir" ]; then
    echo "Could not identify the Singularity libexecdir."
    exit 1
fi

if [ -f "$libexecdir/singularity/functions" ]; then
    . "$libexecdir/singularity/functions"
else
    echo "Error loading functions: $libexecdir/singularity/functions"
    exit 1
fi

if [ -z "$SAPPSPEC" ]; then
    message 0 "SAPP specfile not given\n"
    exit 1
fi

if [ -z "$TMPDIR" ]; then
    message 0 "TMPDIR not given\n"
    exit 1
fi


message 3 "Creating template files\n"
if [ ! -d "$TMPDIR/etc" ]; then
    mkdir -p "$TMPDIR/etc"
fi
cat <<EOF > "$TMPDIR/etc/nsswitch.conf"
passwd:     files sss
shadow:     files sss
group:      files sss
#hosts:     db files nisplus nis dns
hosts:      files dns myhostname
EOF
cat <<EOF > "$TMPDIR/etc/resolv.conf"
nameserver 8.8.8.8
EOF
cat <<EOF > "$TMPDIR/etc/hosts"
127.0.0.1 localhost
EOF


exit 0
