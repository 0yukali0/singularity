if [ -z "$libexecdir" ]; then
    echo "Could not identify the Singularity libexecdir."
    exit 1
fi

if [ -f "$libexecdir/singularity/functions" ]; then
    . "$libexecdir/singularity/functions"
else
    echo "Error loading functions: $libexecdir/singularity/functions"
    exit 1
fi

if [ -z "$SAPPSPEC" ]; then
    message 0 "SAPP specfile not given\n"
    exit 1
fi

if [ -z "$TMPDIR" ]; then
    message 0 "TMPDIR not given\n"
    exit 1
fi


message 5 "Building singularity runscript\n"
echo "#!/bin/sh" > "$TMPDIR/c/singularity"
echo "PATH=/bin:/usr/bin:/sbin:/usr/sbin" >> "$TMPDIR/c/singularity"
echo "export PATH" >> "$TMPDIR/c/singularity"
get_section_from_conf "runscript" "$SAPPSPEC" >> "$TMPDIR/c/singularity.runscript"

if [ -s "$TMPDIR/c/singularity.runscript" ]; then
    cat "$TMPDIR/c/singularity.runscript" >> "$TMPDIR/c/singularity"
else
    message 2 "generating a basic singularity runscript\n"
    if OUTPUT=`get_key_from_conf "exec" "$SAPPSPEC"`; then
        echo "exec \"$OUTPUT\" \"\$@\"" >> "$TMPDIR/c/singularity"
    else
        message 0 "ERROR: no runscript or program to exec defined!\n"
        exit 1
    fi
fi
rm -f "$TMPDIR/c/singularity.runscript"
chmod 755 "$TMPDIR/c/singularity"

exit 0
