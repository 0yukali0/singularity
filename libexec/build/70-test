if [ -z "$libexecdir" ]; then
    echo "Could not identify the Singularity libexecdir."
    exit 1
fi

if [ -f "$libexecdir/singularity/functions" ]; then
    . "$libexecdir/singularity/functions"
else
    echo "Error loading functions: $libexecdir/singularity/functions"
    exit 1
fi

if [ -z "$SAPPSPEC" ]; then
    message 0 "SAPP specfile not given\n"
    exit 1
fi

if [ -z "$TMPDIR" ]; then
    message 0 "TMPDIR not given\n"
    exit 1
fi


# Pull in the %test section of the spec
message 3 "Evaluating specfile for section 'test'\n"
echo "#!/bin/sh" > "$TMPDIR/singularity"
echo "PATH=/bin:/usr/bin:/sbin:/usr/sbin" >> "$TMPDIR/singularity"
echo "set -x" >> "$TMPDIR/singularity"
get_section_from_conf "test" "$SAPPSPEC" >> "$TMPDIR/singularity.test"

if [ -s "$TMPDIR/singularity.test" ]; then
    cat "$TMPDIR/singularity.test" >> "$TMPDIR/singularity"
    chmod 755 "$TMPDIR/singularity"
    rm -f "$TMPDIR/singularity.test"

    if [ -x "$libexecdir/singularity/sexec" ]; then
        SAPPDIR="$TMPDIR"
        export SAPPDIR
        message 1 "Running %test...\n"
        exec "$libexecdir/singularity/sexec" "$@"
    fi
fi
rm -f "$TMPDIR/singularity.test"

exit 0
