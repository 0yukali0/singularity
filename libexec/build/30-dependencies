if [ -z "$libexecdir" ]; then
    echo "Could not identify the Singularity libexecdir."
    exit 1
fi

if [ -f "$libexecdir/singularity/functions" ]; then
    . "$libexecdir/singularity/functions"
else
    echo "Error loading functions: $libexecdir/singularity/functions"
    exit 1
fi

if [ -z "$SAPPSPEC" ]; then
    message 1 "SAPP specfile not given"
    exit 1
fi

if [ -z "$TMPDIR" ]; then
    message 1 "TMPDIR not given"
    exit 1
fi


for i in $libexecdir/singularity/build/deps*; do
    COMPLETE=0
    if [ -x "$i" ]; then
        message 3 "Executing: $i"
        sh "$i" "$@"
        RET=$?
        if [ "$RET" -eq "1" ]; then
            # No new deps
            COMPLETE=1
        elif [ "$RET" -ne "0" ]; then
            # ERROR
            message 0 "ERROR: Dependency resolution threw an error!"
            exit 1
        fi
    fi
done

exit 0
