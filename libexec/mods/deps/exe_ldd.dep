if [ -z "$libexecdir" ]; then
    echo "Could not identify the Singularity libexecdir."
    exit 1
fi

if [ -f "$libexecdir/singularity/functions" ]; then
    . "$libexecdir/singularity/functions"
else
    echo "Error loading functions: $libexecdir/singularity/functions"
    exit 1
fi


for file in $@; do
    for dep in `ldd $INSTALLDIR/c/$file | sed -e 's@ @\n@g'`; do
        if [ -f "$dep" ]; then
            message 3 "found dependency:      $dep\n"
            if [ ! -f "$INSTALLDIR/c/$dep" ]; then
#                DIRNAME=`dirname $dep`
#                if [ ! -d "$INSTALLDIR/c/$DIRNAME" ]; then
#                    LD_PATH="$DIRNAME:${LD_PATH}"
#                fi
                /bin/sh -c "$libexecdir/singularity/mods/install_file $dep"
                RETVAL=0
            fi
        fi
    done
done



exit 0
