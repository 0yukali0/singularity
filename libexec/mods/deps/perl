if [ -z "$libexecdir" ]; then
    echo "Could not identify the Singularity libexecdir."
    exit 1
fi

if [ -f "$libexecdir/singularity/functions" ]; then
    . "$libexecdir/singularity/functions"
else
    echo "Error loading functions: $libexecdir/singularity/functions"
    exit 1
fi

if [ -z "$SAPPSPEC" ]; then
    message 1 "SAPP specfile not given\n"
    exit 1
fi

if [ -z "$INSTALLDIR" ]; then
    message 1 "INSTALLDIR not given\n"
    exit 1
fi


RETVAL=1

touch "$INSTALLDIR/deps.perl"

message 2 "Searching for perl dependencies\n"
for file in `cd "$INSTALLDIR/c"; find . -type f -print`; do
    if ! grep -qF "^$file$" "$INSTALLDIR/deps.perl"; then
        echo "$file" >> "$INSTALLDIR/deps.perl"
        message 5 "scanning executable perl file for deps: $file\n"
        egrep "^\s*use " "$INSTALLDIR/c/$file" | sed 's/\s*use\s*//' | sed 's/\s.*$//' | sed 's/;.*//' | while read i; do
            if FILE=`perldoc -l $i 2>/dev/null`; then
                if [ ! -f "$INSTALLDIR/c/$FILE" ]; then
                    install_file "$FILE"
                    RETVAL=0
                fi
            fi
        done
        egrep "^\s*no " "$INSTALLDIR/c/$file" | sed 's/\s*no\s*//' | sed 's/\s.*$//' | sed 's/;.*//' | while read i; do
            if FILE=`perldoc -l $i 2>/dev/null`; then
                if [ ! -f "$INSTALLDIR/c/$FILE" ]; then
                    install_file "$FILE"
                    RETVAL=0
                fi
            fi
        done
        egrep "^\s*require " "$INSTALLDIR/c/$file" | sed 's/\s*require\s*//' | sed 's/\s.*$//' | sed 's/;.*//' | while read i; do
            if FILE=`perldoc -l $i 2>/dev/null`; then
                if [ ! -f "$INSTALLDIR/c/$FILE" ]; then
                    install_file "$FILE"
                    RETVAL=0
                fi
            fi
        done
    fi
done

exit $RETVAL
