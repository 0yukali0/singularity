if [ -z "$libexecdir" ]; then
    echo "Could not identify the Singularity libexecdir."
    exit 1
fi

if [ -f "$libexecdir/singularity/functions" ]; then
    . "$libexecdir/singularity/functions"
else
    echo "Error loading functions: $libexecdir/singularity/functions"
    exit 1
fi

if [ -z "$SAPPSPEC" ]; then
    message 1 "SAPP specfile not given\n"
    exit 1
fi

if [ -z "$SAPPDIR" ]; then
    message 1 "SAPPDIR not given\n"
    exit 1
fi


RETVAL=1

message 2 "Searching for perl dependencies\n"
for file in `find "$SAPPDIR/c" -type f -print`; do
#    if file -b "$file" | grep -qi perl; then
        message 5 "scanning executable perl file for deps: $file\n"
        egrep "^\s*use " "$file" | sed 's/\s*use\s*//' | sed 's/\s.*$//' | sed 's/;.*//' | while read i; do
            if FILE=`perldoc -l $i 2>/dev/null`; then
                if [ ! -f "$SAPPDIR/c/$FILE" ]; then
                    copy_file_to_sappdir "$FILE"
                    RETVAL=0
                fi
            fi
        done
        egrep "^\s*no " "$file" | sed 's/\s*no\s*//' | sed 's/\s.*$//' | sed 's/;.*//' | while read i; do
            if FILE=`perldoc -l $i 2>/dev/null`; then
                if [ ! -f "$SAPPDIR/c/$FILE" ]; then
                    copy_file_to_sappdir "$FILE"
                    RETVAL=0
                fi
            fi
        done
        egrep "^\s*require " "$file" | sed 's/\s*require\s*//' | sed 's/\s.*$//' | sed 's/;.*//' | while read i; do
            if FILE=`perldoc -l $i 2>/dev/null`; then
                if [ ! -f "$SAPPDIR/c/$FILE" ]; then
                    copy_file_to_sappdir "$FILE"
                    RETVAL=0
                fi
            fi
        done
#    fi
done

exit $RETVAL
