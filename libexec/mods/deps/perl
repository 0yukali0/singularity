if [ -z "$libexecdir" ]; then
    echo "Could not identify the Singularity libexecdir."
    exit 1
fi

if [ -f "$libexecdir/singularity/functions" ]; then
    . "$libexecdir/singularity/functions"
else
    echo "Error loading functions: $libexecdir/singularity/functions"
    exit 1
fi

if [ -z "$SAPPSPEC" ]; then
    message 1 "SAPP specfile not given\n"
    exit 1
fi

if [ -z "$SAPPDIR" ]; then
    message 1 "SAPPDIR not given\n"
    exit 1
fi


RETVAL=1

message 2 "Searching for needed interpreters\n"
for file in `find "$SAPPDIR/c" -type f \( -perm -0100 -or -perm -0010 -or -perm -0001 \) -print`; do
    if head -n 1 $file | grep "^#\!/" | grep -q perl; then
        message 5 "scanning executable perl file for deps: $file\n"
        egrep "^[ ]*use " "$file" | sed 's/use[ ]*\([^ ]*\).*;/\1/' | while read i; do
            if FILE=`perldoc -l $i 2>/dev/null`; then
                if [ ! -f "$SAPPDIR/c/$FILE" ]; then
                    copy_file_to_sappdir "$FILE"
                    RETVAL=0
                fi
            fi
        done
        egrep "^[ ]*require " "$file" | sed 's/require[ ]*\([^ ]*\).*;/\1/' | while read i; do
            if FILE=`perldoc -l $i 2>/dev/null`; then
                if [ ! -f "$SAPPDIR/c/$FILE" ]; then
                    copy_file_to_sappdir "$FILE"
                    RETVAL=0
                fi
            fi
        done
    fi
done

exit $RETVAL
