if [ -z "$libexecdir" ]; then
    echo "Could not identify the Singularity libexecdir."
    exit 1
fi

if [ -f "$libexecdir/singularity/functions" ]; then
    . "$libexecdir/singularity/functions"
else
    echo "Error loading functions: $libexecdir/singularity/functions"
    exit 1
fi

if [ -z "$SAPPSPEC" ]; then
    message 1 "SAPP specfile not given\n"
    exit 1
fi

if [ -z "$INSTALLDIR" ]; then
    message 1 "INSTALLDIR not given\n"
    exit 1
fi


for file in $@; do
    if file "$INSTALLDIR/c/$file" | grep -q "Python"; then
        INCLUDE_PY=1
        egrep "^\s*(import)\s*" "$INSTALLDIR/c/$file" | sed -e 's/^\s*\S*\s*\(\S*\).*/\1/' | while read req; do
            $libexecdir/singularity/ftrace `which python` -c 'import $req' 2>&1 >/dev/null | while read FILE; do
                if [ ! -f "$INSTALLDIR/c/$FILE" ]; then
                    if ! /bin/sh -c "$libexecdir/singularity/mods/install_file $FILE"; then
                        message 0 "ERROR: Failed installing file: $FILE\n"
                        exit 1
                    fi
                fi
            done
        done
    fi
done


exit 0
