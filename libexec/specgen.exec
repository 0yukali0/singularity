if [ -z "$libexecdir" ]; then
    echo "Could not identify the Singularity libexecdir."
    exit 1
fi

if [ -f "$libexecdir/singularity/functions" ]; then
    . "$libexecdir/singularity/functions"
else
    echo "Error loading functions: $libexecdir/singularity/functions"
    exit 1
fi

if [ -z "$1" ]; then
    echo "USAGE: singularity specgen [command]"
    exit 1
fi


trap true INT KILL

PATH=$PATH:.

PROGRAM=`which "$1"`
NAME=`basename "$PROGRAM"`
shift

echo "Name: $NAME" > $NAME.sspec

cat <<EOF >> $NAME.sspec
Summary:
Maintainer:

%runscript
exec $PROGRAM "\$@"


%test


%files
$PROGRAM
EOF

exec 3>&1

strace -f -e open $PROGRAM "$@" 2>&1 >&3 3>&- | (
    grep "open(" |\
    grep -v "= -1" |\
    grep -v "(No such file or directory)" |\
    sed -e 's/.*open("\([^"]\+\)", .*$/\1/g' |\
    sort |\
    uniq |\
    grep -v "^/tmp/" |\
    grep -v "^/proc/" |\
    grep -v "^/sys/" |\
    grep -v "^/etc/passwd" |\
    grep -v "^/etc/group" |\
    grep -v "^/dev/" >> $NAME.sspec
)

exec 3>&-

echo "WROTE: $NAME.sspec"
