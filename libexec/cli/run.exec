## Basic sanity
if [ -z "$libexecdir" ]; then
    echo "Could not identify the Singularity libexecdir."
    exit 1
fi

## Load functions
if [ -f "$libexecdir/singularity/functions" ]; then
    . "$libexecdir/singularity/functions"
else
    echo "Error loading functions: $libexecdir/singularity/functions"
    exit 1
fi

load_mod cache
load_mod sexec


while true; do
    case $1 in
        -c|--contain)
            SINGULARITY_CONTAIN=1
            export SINGULARITY_CONTAIN
            shift
        ;;
        -s|--check)
            FILE_CHECK=1
            export FILE_CHECK
            shift
        ;;
        -d|--dir)
            shift
            SINGULARITY_SCRATCH="$1"
            export SINGULARITY_SCRATCH
            shift
        ;;
        -*)
            echo "ERROR: Unknown option: $1"
            exit 1
        ;;
        *)
            break;
        ;;
    esac
done

if [ -z "$1" ]; then
    echo "USAGE: singularity (options) run [container name] (options)\n"
    exit 1
fi

if [ -f "$1" ]; then
    if sappfile_issapp "$1"; then
        REAL_SAPP_NAME=`sappfile_name "$1"`
        message 0 "ERROR: This appears to be a SAPP file, not a container name\n\n"
        message 1 "Perhaps try this:\n"
        message 1 "    $ singularity install $1\n"
        message 1 "    $ singularity run $REAL_SAPP_NAME\n\n"
        exit 1
    fi
fi

if ! cache_sappexists "$1"; then
    message 0 "ERROR: '$1' is not installed\n"
    exit 1
fi


SAPPNAME="$1"
SINGULARITY_COMMAND="run"
SAPPDIR=`cache_sappdir "$SAPPNAME"`
CONTAINERPATH="$SAPPDIR/c"
export SAPPNAME SINGULARITY_COMMAND CONTAINERPATH
shift

message 2 "Running '$SAPPNAME'\n"

if [ -n "$FILE_CHECK" ]; then
    if ! cache_sappfilecheck "$SAPPNAME"; then
        message 0 "Not executing container...\n"
        exit 1
    fi
fi

message 2 "Exec'ing Sexec\n"
sexec_exec "$@" <&0

