## Basic sanity
if [ -z "$libexecdir" ]; then
    echo "Could not identify the Singularity libexecdir."
    exit 1
fi

## Load functions
if [ -f "$libexecdir/singularity/functions" ]; then
    . "$libexecdir/singularity/functions"
else
    echo "Error loading functions: $libexecdir/singularity/functions"
    exit 1
fi

load_mod cache
load_mod sappfile


SAPPFILE="$1"
SAPPNAME=`sappfile_name "$SAPPFILE"`
shift

if [ -z "$SAPPFILE" ]; then
    echo "USAGE: singularity (options) install [SAPP file]\n"
    exit 1
fi

if [ ! -f "$SAPPFILE" ]; then
    echo "ERROR: SAPP file ($SAPPFILE) not found\n"
    exit 1
fi


if ! cache_sappexists "$SAPPNAME"; then
    message 1 "Installing: $SAPPNAME\n"

    cache_sappinstall "$SAPPFILE"

    message 1 "Done...\n"
else
    message 1 "Singularity container is already installed: $SAPPNAME\n"
fi
